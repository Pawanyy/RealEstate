<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RealEstate</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <style>
        body {
            background: #f3f8fc;
        }

        a.sidebar-link {
            color: #808080;
            text-decoration: none !important;
        }

        .sidebar div ul li.nav-item {
            margin: 10px 20px !important;
        }
    </style>
    <nav class="navbar sticky-top navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/assets/img/RealEstate.png" alt="Logo" height="35" class="d-inline-block align-text-top rounded-4">
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Properties", "Properties", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                <form class="d-flex" role="search">
                    @if (Session["Email"] != null && (Session["Type"].Equals("Vendor")))
                    {
                        <span class="d-none d-md-block dropdown-toggle ps-2">
                            @Session["Email"].ToString()
                        </span>
                    }
                    else
                    {
                        <script>
                            window.location = '@Url.Action("Login", "Vendor")'
                        </script>
                    }
                    @Html.ActionLink("Logout", "Logout", "Vendor", new { area = "" }, new { @class = "btn btn-danger ms-2" })
                </form>
            </div>
        </div>
    </nav>
    <div class="jumbotron p-3 p-md-5 text-white bg-dark">
        <div class="col-md-12 px-0">
            <h1 class="display-4 font-italic text-center">@ViewBag.Title</h1>
            <nav class="d-flex justify-content-center" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Vendor")">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <nav class="col-md-3 sidebar p-4 bg-white rounded text-light">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="sidebar-link" href="@Url.Action("Profile", "Vendor")">
                                <i class="bi-person fs-4"></i>
                                Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="sidebar-link" href="@Url.Action("AddProperty", "Vendor")">
                                <i class="bi-house-add fs-4"></i>
                                Add Property
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="sidebar-link" href="@Url.Action("MyProperties", "Vendor")">
                                <i class="bi-houses fs-4"></i>
                                My Properties
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="sidebar-link" href="#">
                                <i class="bi-mailbox fs-4"></i>
                                Received Queries
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="sidebar-link" href="#">
                                <i class="bi-chat fs-4"></i>
                                Answered Queries
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="sidebar-link" href="#">
                                <i class="bi-box-arrow-right fs-4"></i>
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto pt-3 px-4">
                @RenderBody()
            </main>
        </div>

    </div>

    @Html.Partial("_Footer")


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
