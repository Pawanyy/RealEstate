@model IEnumerable<RealEstateMVC_NOAUTH.Models.FAQ>

@{
    ViewBag.Title = "About";
}
<main aria-labelledby="title">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
        </ol>
    </nav>

    <div class="container">

        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">RealEstate, Inc</h1>
                    <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
                    <p>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary my-2">Home</a>
                        <a href="@Url.Action("Contact", "Home")" class="btn btn-secondary my-2">Contact Us</a>
                    </p>
                </div>
            </div>
        </section>

        <section id="About">
            <h1 class="text-center">FAQ</h1>
            <div class="accordion" id="accordionExample">
                @{int i = 0;}
                @foreach (var item in Model)
                {
                    i++;
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading_@i">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="true" aria-controls="collapse_@i">
                                <strong>@Html.DisplayNameFor(model => model.QUEST) @i:</strong>&nbsp;@Html.DisplayFor(modelItem => item.QUEST)
                            </button>
                        </h2>
                        <div id="collapse_@i" class="accordion-collapse collapse" aria-labelledby="heading_@i" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <strong>@Html.DisplayNameFor(model => model.ANSWER):</strong> @Html.DisplayFor(modelItem => item.ANSWER)
                            </div>
                        </div>
                    </div>
                }
            </div>

        </section>

    </div>
</main>